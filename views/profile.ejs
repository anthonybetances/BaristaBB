<!doctype html>
<html>
<head>
    <title>Barista BB</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Barista BB</h1>
        <h2>The Coffee Queue</h2>
        <a href="/logout" class="btn btn-default btn-sm">Log Out</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%= user.local.name%> </h3>

                <% if (user.local.email) { %>
                    <p>
                        <img src="" alt="">
                        <!-- put photo -->
                        <strong>Email</strong>: <%= user.local.email %>

                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>Up Next</h3>
          <ul class="coffeeOrders">
          <% for(var i=0; i<messages.length; i++) {%>
            <% if(messages[i].finished === false) {%>
            <li class="message">
              <span>Customer: </span>
              <span><%= messages[i].cust %></span>,
              <span>Order: </span>
              <span><%= messages[i].order %></span>
              <span><i class="fas fa-edit" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
            <% } %>
          <% } %>
          </ul>

          <h3>Finished Orders</h3>
          <ul class="coffeeOrders">
          <% for(var i=0; i<messages.length; i++) {%>
            <% if(messages[i].finished === true) {%>
            <li class="message">
              <span>Customer: </span>
              <span><%= messages[i].cust %></span>,
              <span>Order: </span>
              <span><%= messages[i].order %></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
            <% } %>
          <% } %>
          </ul>



</div>

<script src="main.js"></script>

</body>
</html>
